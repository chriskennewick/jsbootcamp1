<!DOCTYPE html>
<html>
  <head>
    <title>Code Fellows Contact Manager</title>

    <!-- Bring In jQuery -->
    <script src="/bower_components/js/jquery/jquery.js"></script>
    <script src="/jquery.sortElements.js"></script>

    <!-- Bring In Bootstrap -->
    <link rel="stylesheet" href="/bower_components/css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/css/bootstrap/bootstrap-theme.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.css">
    <script src="/bower_components/js/bootstrap/bootstrap.min.js"></script>
    <!-- Application Styles and Scripts -->
    <link rel="stylesheet" href="/jsbootcamp.css">
    <script src="/contactlist.js"></script>
    <script>
      $(document).ready(function() {
        makeContactRowClickable();
        makeColumnSortable();
      });
    </script>
  </head>

  <body>
    <h3>Contact Lists</h3>
    <table class="table table-hover">
      <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Nickname</th>
            <th>Company</th>
        </tr>
      </thead>

      <tbody>
        {{#each contacts}}
          <tr data-contact-guid="{{guid}}">
            <td>{{lastName}}</td>
            <td>{{firstName}}</td>
            <td>{{nickname}}</td>
            <td>{{company}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
